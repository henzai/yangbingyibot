{
	"$schema": "https://biomejs.dev/schema",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"includes": ["**", "!worker-configuration.d.ts", "!.claude"]
	},
	"linter": {
		"rules": {
			"recommended": true,
			"nursery": {
				"noFloatingPromises": "error",
				"noMisusedPromises": "error"
			}
		}
	}
}
